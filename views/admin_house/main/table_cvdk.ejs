<!-- Page Heading -->

<div class="container-fluid">
  <h1 class="h3 mb-2 text-gray-800">Xem Công Việc Định Kỳ</h1>

  <div class="table-responsive">
    <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
      <thead>
        <tr class="table-success">
          <th>Control</th>
          <th>STT</th>
          <th>Tên</th>
          <th>VịTrí</th>
          <th>StartDay</th>
          <th>EndDay</th>
          <th>chekemail</th>
          <th>hoanthanh</th>
          <th>laplai</th>
          <th>Ghichu</th>
        </tr>
      </thead>
      <tfoot>
        <tr class="table-success">
          <th>Control</th>
          <th>STT</th>
          <th>Tên</th>
          <th>VịTrí</th>
          <th>Ngàybắtđầu</th>
          <th>ngàyhethan</th>
          <th>chekemail</th>
          <th>hoanthanh</th>
          <th>laplai</th>
          <th>Ghichu</th>
        </tr>
      </tfoot>

      <tbody>
        <% var stt = 0 %>
        <% data.forEach((data)=>{ %>
        <% var bien = data._id %>
        <% stt += 1 %>
        <tr>
          <td>
            <div>
              <div class="btn btn-info btn-circle btn-sm" data-toggle="modal" data-target="#idsua" onclick="sua('<%= bien %>')">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="btn btn-danger btn-circle btn-sm" data-toggle="modal" data-target="#idxoa" onclick="sua('<%= bien %>')">
                <i class="fas fa-trash">
                </i>
              </div>
            </div>
            
          </td>
          <td>
            <%= stt %>
          </td>
          <td>
            <%= data.tencv %>
          </td>
          <td>
            <%= data.vitricv %>
          </td>
          <td>
            <%= data.ngaybatdau %>
          </td>
          <td>
            <%= data.timehethan %>
          </td>
          <td>
            <%= data.ngayguimail %>
          </td>
          <td>
            <%= data.hoanthanh || 'no' %>
          </td>
          <td>
            <%= data.laplai || 'no' %>
          </td>
          <td>
            <%= data.ghichu %>
          </td>
         
          
        </tr>


        <% }) %>


      </tbody>
    </table>
  </div>
  <!-- </div>
    </div> -->
</div>

