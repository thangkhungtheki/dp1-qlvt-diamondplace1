<script>
  // 1. Khởi tạo DataTable (Chỉ chạy khi document ready)
  $(document).ready(function() {
    $('#dataTable').DataTable({
       "pageLength": 50,
       "language": {
            "search": "Tìm kiếm:",
            "lengthMenu": "Hiển thị _MENU_ dòng",
            "info": "Đang hiển thị _START_ đến _END_ của _TOTAL_ dòng",
            "paginate": { "first": "Đầu", "last": "Cuối", "next": "Tiếp", "previous": "Trước" }
        }
    });
  });

  // 2. Hàm mở Modal Sửa (Được gọi từ nút bấm)
  function sua(id) {
    console.log("Đang sửa ID:", id); // Log để debug
    
    // Gọi API lấy chi tiết công việc
    $.get(`/housetask/api/congviec/${id}`)
      .done(function (res) {
          if(!res || !res.cv) {
              alert("Không tìm thấy dữ liệu công việc!");
              return;
          }
          
          const cv = res.cv;
          
          // Đổ dữ liệu vào Form Modal
          $('#idcv').val(cv._id);
          $('#edit_khuvuc').val(cv.khuvuc);
          $('#edit_vitri').val(cv.vitri);
          $('#edit_tencv').val(cv.tencv);
          $('#edit_congviectheothang').val(cv.congviectheothang);
          $('#edit_ngaybatdau').val(cv.ngaybatdau);
          $('#edit_ngayketthuc').val(cv.ngayketthuc);
          $('#edit_motacongviec').val(cv.motacongviec);
          $('#edit_solanlam').val(cv.solanlam);
          $('#edit_thoigian').val(cv.thoigian);
          $('#edit_songaynhacthongbao').val(cv.songaynhacthongbao);
          
          // Xử lý hiển thị Textarea (thay dấu chấm bằng xuống dòng để dễ sửa)
          $('#edit_lichsucv').val(cv.lichsucv || '');
          $('#edit_lichsukiemtra').val(cv.lichsukiemtra || '');

          // Xử lý hiển thị ảnh QR Preview
          if (cv.maqrcochu) {
              let imgSrc = cv.maqrcochu.startsWith('data:image') 
                           ? cv.maqrcochu 
                           : 'data:image/png;base64,' + cv.maqrcochu;
              $('#edit_preview_anh').attr('src', imgSrc).show();
          } else {
              $('#edit_preview_anh').hide();
          }

          // Mở Modal
          $('#modalSua').modal('show');
      })
      .fail(function() {
          alert("Lỗi kết nối đến server! Không lấy được dữ liệu.");
      });
  }

  // 3. Hàm xác nhận Xóa
  function xacNhanXoa(id) {
     $('#btnXoaCv').val(id);
     $('#modalXoa').modal('show');
  }

  // 4. Xử lý nút Xóa trong Modal
  $('#btnXoaCv').click(function () {
    const id = $(this).val();
    $.post(`/housetask/api/congviec/delete/`, { _id: id })
      .done(() => {
        alert('✅ Đã xóa công việc!');
        location.reload();
      })
      .fail(() => alert('❌ Lỗi khi xóa công việc.'));
  });

  // 5. Xử lý Submit Form Sửa
  $('#form-sua-cv').on('submit', function (e) {
      e.preventDefault();
      const formData = $(this).serialize();
      
      $.post(`/housetask/api/congviec/update`, formData)
        .done(() => {
          alert('✅ Cập nhật công việc thành công!');
          $('#modalSua').modal('hide');
          window.location.reload();
        })
        .fail((xhr) => {
          alert('❌ Lỗi khi cập nhật! ' + (xhr.responseText || ''));
        });
  });
</script>